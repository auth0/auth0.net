{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "cwd": "../src"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "articles/**/*.md", "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      },
      {
        "files": [
          "banner.png"
        ],
        "src": ".."
      }
    ],
    "dest": "../docs",
    "template": [
      "default"
    ],
    "globalMetadata": {
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/logo.png",
      "_disableContribution": true
    }
  }
}